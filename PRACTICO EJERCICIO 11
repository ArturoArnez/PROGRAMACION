//MCD.cpp : Defines the entry point for the console application.
//NOMBRE: ARTURO ARNEZ LOPEZ
//HALLAR EL MAXIMO COMUN DIVISOR 


#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

void main()
{
  int ,a,b,c,menor,MCD,cont;
  cout<< "INGRESE A: ";
  cin>> a;
  cout<< "INGRESE B: ";
  cin>> b;
  cout<< "INGRESE C: ";
  cin>> c;
  if((a<b)&&(a<c))
menor = a;
  else
if((b<a)&&(b<c))
menor = b;
else
menor = c;
  MCD = 1;
  cont = 2;
 while (cont <= menor)
 {
if((a % cont==0)&&(b % cont==0)&&(c & cont==0))
{
a = a/cont;
b = b/cont;
c = c/cont;
menor = menor/cont;
MCD = MCD*cont;
cont = cont-1;
}
 cont = cont+1;
 }
 cout<< MCD;
 getch();
}
