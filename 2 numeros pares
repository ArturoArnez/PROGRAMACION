#include "stdafx.h"
#include <iostream>
#include "conio.h"

    using namespace std; 
    void main()

{
	int num1 ,num2,res;
	cout<<"DADO 2 NUMEROS CONSIDERAR SI LOS 2 SON PARES SE SUMEN CASO CONTRARIO SE MULTIPLIQUEN \n\n";
	cout<<"introduzca num1:";
		cin>>num1;
	cout<<"introduzca num2:";
		cin>>num2;
if ((num1%2==0) && (num2%2==0))
        res=num1+num2;
        
else
       res=num1*num2;
    

       cout<<res;

getch();
	
}

