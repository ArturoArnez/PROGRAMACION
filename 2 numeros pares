using namespace std;
void main()

{
	int A,B,res;
	cout<<"DADO 2 NUMEROS,SI LOS 2 SON PARES,SE SUMEN CASO CONTRARIO SE MULTIPLIQUEN \n\n";
	cout<<"INTRODUCE UN NUMERO ";
	cin>>A;
	cout<<"INTRODUCE UN NUMERO ";
    cin>>B;
	cout<<"EL RESULTADO ES ";
if((A%2==0)

&&(B%2==0))

     res=A+B;
else

        res=A*B;
cout<<res;

getch();
}
