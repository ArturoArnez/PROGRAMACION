#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
   float papas,h,hq,soda,total,N,TOTALAPAGAR,total1,total2,total3,total4,i;

   cout<<"BIENVENIDO,QUE DESEA ORDENAR \n\n  ";

   cout<<"PAPAS FRITAS ";
  
   cin>>papas;

   total1=0;
   for(i=2;i<=papas;i++);
   total1=total1+i;
   
   cout<<"HAMBURGUESAS \n\n";
   cin>>h;
   total2=0;
   for(i=3;i<=h;i++);
    total2=total2+i;
   
   cout<<"HAMBURGUESAS CON QUESO \n\n";
   cin>>hq;
   total3=0;
  for(i=5;i<=hq;i++);
    total3=total3+i;
    
    cout<<"SODA \n\n";
    cin>>soda;
    total4=0;
    for(i=2.5;i<=soda;i++);
    total4=total4+i;
    
    TOTALAPAGAR=total1+total2+total3+total4;
    cout<<"EL TOTAL A PAGAR ES "<< TOTALAPAGAR<<"BS";
getch();
}
