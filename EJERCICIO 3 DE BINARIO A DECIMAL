#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;

int valor(int X); //LO MISMO

void main()
{ int X,V; //DECLARAR VARIABLES A USAR EN ESTA PARTE
cout<<"INGRESE EL VALOR BINARIO: ";
  cin>>X;
  V=valor(X);

cout<<"EL NUMERO ES: "<<V;
getch();
}

int valor(int X) //LO MISMO
{
 int i=0,suma=0,dig; //DECLARAR VARIABLES QUE USO EN ESTA PARTE
 while (X>0)
	{
	  dig=X%10;
	  X=X/10;
	  suma=suma+pow(2.0,i)*dig;
	  i=i+1;
	}
	return suma;
}
