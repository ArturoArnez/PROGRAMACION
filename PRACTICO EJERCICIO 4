//CALCULAR LA SIGUIENTE SUMA 1-2+3-4+5-6...(+/-)N.

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include"math.h"
using namespace std;
int main()
{
int Suma,N,i;
cout<< "Ingrese el valor de N: ";
cin>> N;
Suma=0;
for (i=1;i<=N/2;i++)
{
if (i % 2 == 0)
Suma= Suma - i;
else
Suma = Suma + i;
}
cout<< Suma;
getch();
return 0;
}
